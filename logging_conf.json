{
    "version": 1,
    "formatters": {
        "simple": {
            "format": "[%(levelname)s] %(asctime)s: %(message)s",
            "datefmt": "%Y/%m/%d %H:%M:%S"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "ERROR",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.FileHandler",
            "formatter": "simple",
            "filename": "/opt/python/log/logger.log"
        },
        "wsgi": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple",
            "stream": "ext://flask.logging.wsgi_errors_stream"
        }
    },
    "loggers": {
        "AppLogger": {
            "level": "DEBUG",
            "handlers": ["file"],
            "propagate": "no"
        }
    },
    "root": {
        "handlers": ["wsgi"]
    }
}