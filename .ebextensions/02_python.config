commands:
  00_create_dir:
    command: mkdir -p /opt/python/log
  01_change_permissions:
    command: chmod g+s /opt/python/log
  02_change_owner:
    command: chown root:wsgi /opt/python/log

files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/python.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      /opt/python/log/logger.log

